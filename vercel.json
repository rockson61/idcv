{
  "regions": ["sin1"],
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  },
  "functions": {
    "app/**/*.tsx": {
      "memory": 3008,
      "maxDuration": 60
    },
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}

